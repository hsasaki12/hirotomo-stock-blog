---
const links = [
  { href: '/', label: 'Home' },
  { href: '/blog', label: 'Blog' },
  { href: '/about', label: 'About' },
];
---
<header class="sticky top-0 z-30 backdrop-blur bg-white/70 dark:bg-zinc-900/70 border-b border-zinc-200/70 dark:border-zinc-800/70">
  <div class="max-w-3xl mx-auto px-4 h-16 flex items-center justify-between">
    <a href="/" class="font-semibold tracking-tight text-lg">Hirotomo Sasaki</a>
    <nav class="flex items-center gap-1">
      {links.map(l => (
        <a class="px-3 py-2 rounded-lg hover:bg-zinc-100 dark:hover:bg-zinc-800" href={l.href}>{l.label}</a>
      ))}
    </nav>
  </div>
</header>
