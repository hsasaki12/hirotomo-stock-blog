---
interface Props {
  href: string;
  title: string;
  description?: string;
  date?: string;
  image?: string;
}
const { href, title, description, date, image } = Astro.props;
---
<a href={href} class="card block overflow-hidden no-underline hover:shadow-md transition">
  {image && <img src={image} alt={title} loading="lazy" class="w-full aspect-[16/9] object-cover" />}
  <div class="p-5">
    <h3 class="text-lg font-semibold leading-snug">{title}</h3>
    {description && <p class="mt-1 text-[hsl(var(--muted))] line-clamp-2">{description}</p>}
    {date && <time class="mt-3 block text-xs text-[hsl(var(--muted))]">{new Date(date).toLocaleDateString('ja-JP')}</time>}
  </div>
</a>
