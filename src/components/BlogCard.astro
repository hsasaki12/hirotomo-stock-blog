---
interface Props {
  href: string;
  title: string;
  description?: string;
  date?: string;
}
const { href, title, description, date } = Astro.props;
---
<a href={href} class="rounded-2xl border border-zinc-200 dark:border-zinc-800 bg-white dark:bg-zinc-950 shadow-sm hover:shadow transition block p-5">
  <h3 class="text-lg font-semibold leading-snug">{title}</h3>
  {description && <p class="mt-1 text-sm text-zinc-600 dark:text-zinc-400 line-clamp-2">{description}</p>}
  {date && <time class="mt-3 block text-xs text-zinc-500">{new Date(date).toLocaleDateString('ja-JP')}</time>}
</a>
