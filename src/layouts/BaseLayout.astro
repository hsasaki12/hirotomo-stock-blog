---
import '../styles/global.css';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';

const {
  title = 'Hirotomo Blog',
  description = 'English × Japanese Culture × Dev',
} = Astro.props;
---
<!doctype html>
<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>
  <body class="font-sans bg-zinc-50 text-zinc-800 dark:bg-zinc-900 dark:text-zinc-100">
    <Navbar />
    <main class="max-w-3xl mx-auto px-4 py-10">
      <slot />
    </main>
    <Footer />
  </body>
</html>
